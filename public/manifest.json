{
  "manifest_version": 3,
  "name": "ReplayceR",
  "version": "0.1.0",
  "description": "Awesome",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "My Extention Test",
    "default_popup": "popup.html"
  },
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "all_frames": true,
      "run_at": "document_idle",
      "js": ["contentScript.js"],
      "css": ["contentStyles.css"]
    }
  ]
}
